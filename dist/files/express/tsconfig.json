{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    // https://github.com/DefinitelyTyped/DefinitelyTyped/issues/29733
    "lib": ["esnext", "dom"],
    "types": ["jest", "node"]
  },
  "exclude": [
    "./*.ts",
    "files",
    "copy-express-files.ts",
    "./node_modules",
    "dist"
  ]
}
